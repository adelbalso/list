// FO REAL STYLEZ

  .content
    max-width: 480px
    margin: 0 auto
    text-align: center

	input
    border: none
    padding: $buffer * 2
    font-family: $font-family
    font-size: 18px
    font-weight: 200
    height: 60px
    background: none;
    border: 1px solid transparent
    border-bottom: 1px solid $secondary
    color: $primary
    
    &:hover
      background: #f3f3f3
    
    &:focus
      outline: none
    
    &#todo-submission
      width: 78%
      display: inline-block
      
    &.checkbox
      height: auto
    
  button
    font-family: $font-family
    font-size: 18px
    display: inline-block
    border: 1px solid $secondary
    width: 20%
    btn-states()
    
    &.btn-add-task
      height: 60px
      font-size: 18px
      
  ul
    list-style-type: none
    text-align left
    padding-left: 0px
    width: 100%
    
    li      
      .task-name
        margin-left: $buffer * 2
        
      .li-content
        padding: $buffer * 2
      
      &:hover
        background-color: #f3f3f3
        background-image: url('../assets/images/edit_icon.svg')
        background-repeat: no-repeat
        background-size: 20px
        background-position: right 20px top 16px
        transition:none
        
  

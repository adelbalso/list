@import 'nib'
@import 'reset'

// VARIABLES

$buffer = 8px
$font-family = "helvetica neue"

$bg = #fefefe
$primary = #454E55
$secondary = #eeeeee

// MIXINS

test()
  border: 1px solid blue  

btn-states()
  background: #f3f3f3
  padding: $buffer * 2
  &:hover
      background: $secondary
  &:active
    background: #ddd
  &:focus
    outline: none
    

// BASE STYLEZ

*
  transition: all .15s
  box-sizing: border-box

body
	background: $bg
  font-family: $font-family
  font-size: 18px
  color: $body-font
  font-weight: 200

h1, h2, h3, h4, h5, h6
  font-weight: 100
  
